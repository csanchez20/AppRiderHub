<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="txt_titles" parent="TextAppearance.AppCompat">
        <!--Aqui se ponen los parametros que queramos guardar en el estilo de texto de titulos-->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">24dp</item>
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:titleMarginTop">100dp</item>
    </style>
    <style name="button">
        <item name="android:backgroundTint">@color/button_color</item>
    </style>
    <style name="background_color" parent="Theme.AppCompat.DayNight">
        <item name="android:windowBackground">@color/background_color</item>
    </style>
</resources>